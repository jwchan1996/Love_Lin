page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.search{
  background-color: #DCDCDC;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.search image{
  width: 54rpx;
  height: 54rpx;
  background-color: #FEFEFE;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.search input{
  height: 40rpx;
  width: 70vw;
  background-color: #FEFEFE;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #515151;
}
.placeholder {
  /* placeholder颜色  */
  color: #aab2bd;
  /* placeholder字体大小  */
  font-size: 24rpx;
  /* placeholder位置  */
  text-align: left;
}

/*
* 周播表
*/
.week-bar{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  color: #515151;
}
.Monday,
.Tuesday,
.Wednesday,
.Thursday,
.Friday,
.Saturday,
.Sunday{
  width: 12.285vw;
  text-align: center;
  background-color: #fff;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 40rpx;
  margin: 0 1vw;
}
.Monday:hover,
.Tuesday:hover,
.Wednesday:hover,
.Thursday:hover,
.Friday:hover,
.Saturday:hover,
.Sunday:hover{
  color: #fff;
  background-color: #f2aa24;
}

.week-item-container{
  height: auto;
  padding: 1vw;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  flex-wrap: wrap;
}
.week-item{
  width: 22.5vw;
  height: auto;
  background-color: #ddd;
  margin: 1vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.load-bg{
  width: 100%;
  height: 22.5vw;
  background-image: url(https://ws1.sinaimg.cn/large/0065Zy9egy1g0extq9eyxj30e80e8q3t.jpg);
  background-position: center;
  background-size: contain; 
}
.bangumi-img{
  width: 100%;
  height: 100%;
}
.bangumi-name{
  width: 100%;
  /* height: 60rpx; */
  color: #515151;
  background-color: #F8F8F8;
  font-size: 24rpx;
  padding: 10rpx;
  word-break: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
