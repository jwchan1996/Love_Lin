<!--index.wxml-->
<nav-bar text="{{navigationBarTitle}}"></nav-bar>
<view class="container" style="{{'padding-top:' + navigationBarHeight}}">
  <view class="search">
    <input confirm-type="search" bindinput="watchSearchInput" bindconfirm="bindconfirm" placeholder='搜索一下呗……'></input>
    <image src='/images/search.png' bindtap='search'></image>
  </view>

  <view class="week-bar">
    <view class="recommend" 
      data-ddy="0" 
      bindtap="getDayList" 
      style="{{currentTap==0?'color:#fff;background-color:#F2AA24':'color:#515151'}}"
    >推荐</view>
    <view class="Monday" 
      data-ddy="1" 
      bindtap="getDayList" 
      style="{{currentTap==1?'color:#fff;background-color:#F2AA24':'color:#515151'}}"
    >一</view>
    <view class="Tuesday" 
      data-ddy="2" 
      bindtap="getDayList" 
      style="{{currentTap==2?'color:#fff;background-color:#F2AA24':'color:#515151'}}"
    >二</view>
    <view class="Wednesday" 
      data-ddy="3" 
      bindtap="getDayList" 
      style="{{currentTap==3?'color:#fff;background-color:#F2AA24':'color:#515151'}}"
    >三</view>
    <view class="Thursday" 
      data-ddy="4" 
      bindtap="getDayList" 
      style="{{currentTap==4?'color:#fff;background-color:#F2AA24':'color:#515151'}}"
    >四</view>
    <view class="Friday" 
      data-ddy="5" 
      bindtap="getDayList" 
      style="{{currentTap==5?'color:#fff;background-color:#F2AA24':'color:#515151'}}"
    >五</view>
    <view class="Saturday" 
      data-ddy="6" 
      bindtap="getDayList" 
      style="{{currentTap==6?'color:#fff;background-color:#F2AA24':'color:#515151'}}"
    >六</view>
    <view class="Sunday" 
      data-ddy="7" 
      bindtap="getDayList" 
      style="{{currentTap==7?'color:#fff;background-color:#F2AA24':'color:#515151'}}"
    >日</view>
  </view>

  <view class="week-item-container">

    <block wx:for="{{recommend}}" wx:key="item.av" wx:for-item="item" wx:if="{{currentTap==0}}">
      <view class="week-item" data-av="{{item.av}}" data-title="{{item.title}}" bindtap='playVideo'>
        <view class="load-bg">
          <image class="bangumi-img" wx:if="{{item.suo}}" src='{{item.suo}}' mode="aspectFill"></image>
        </view>
        <view class="bangumi-name">{{item.title}}</view>
      </view>
    </block>
    <block wx:for="{{Monday}}" wx:key="item.av" wx:for-item="item" wx:if="{{currentTap==1}}">
      <view class="week-item" data-av="{{item.av}}" data-title="{{item.title}}" bindtap='playVideo'>
        <view class="load-bg">
          <image class="bangumi-img" wx:if="{{item.suo}}" src='{{item.suo}}' mode="aspectFill"></image>
        </view>
        <view class="bangumi-name">{{item.title}}</view>
      </view>
    </block>
    <block wx:for="{{Tuesday}}" wx:key="item.av" wx:for-item="item" wx:if="{{currentTap==2}}">
      <view class="week-item" data-av="{{item.av}}" data-title="{{item.title}}" bindtap='playVideo'>
        <view class="load-bg">
          <image class="bangumi-img" wx:if="{{item.suo}}" src='{{item.suo}}' mode="aspectFill"></image>
        </view>
        <view class="bangumi-name">{{item.title}}</view>
      </view>
    </block>
    <block wx:for="{{Wednesday}}" wx:key="item.av" wx:for-item="item" wx:if="{{currentTap==3}}">
      <view class="week-item" data-av="{{item.av}}" data-title="{{item.title}}" bindtap='playVideo'>
        <view class="load-bg">
          <image class="bangumi-img" wx:if="{{item.suo}}" src='{{item.suo}}' mode="aspectFill"></image>
        </view>
        <view class="bangumi-name">{{item.title}}</view>
      </view>
    </block>
    <block wx:for="{{Thursday}}" wx:key="item.av" wx:for-item="item" wx:if="{{currentTap==4}}">
      <view class="week-item" data-av="{{item.av}}" data-title="{{item.title}}" bindtap='playVideo'>
        <view class="load-bg">
          <image class="bangumi-img" wx:if="{{item.suo}}" src='{{item.suo}}' mode="aspectFill"></image>
        </view>
        <view class="bangumi-name">{{item.title}}</view>
      </view>
    </block>
    <block wx:for="{{Friday}}" wx:key="item.av" wx:for-item="item" wx:if="{{currentTap==5}}">
      <view class="week-item" data-av="{{item.av}}" data-title="{{item.title}}" bindtap='playVideo'>
        <view class="load-bg">
          <image class="bangumi-img" wx:if="{{item.suo}}" src='{{item.suo}}' mode="aspectFill"></image>
        </view>
        <view class="bangumi-name">{{item.title}}</view>
      </view>
    </block>
    <block wx:for="{{Saturday}}" wx:key="item.av" wx:for-item="item" wx:if="{{currentTap==6}}">
      <view class="week-item" data-av="{{item.av}}" data-title="{{item.title}}" bindtap='playVideo'>
        <view class="load-bg">
          <image class="bangumi-img" wx:if="{{item.suo}}" src='{{item.suo}}' mode="aspectFill"></image>
        </view>
        <view class="bangumi-name">{{item.title}}</view>
      </view>
    </block>
    <block wx:for="{{Sunday}}" wx:key="item.av" wx:for-item="item" wx:if="{{currentTap==7}}">
      <view class="week-item" data-av="{{item.av}}" data-title="{{item.title}}" bindtap='playVideo'>
        <view class="load-bg">
          <image class="bangumi-img" wx:if="{{item.suo}}" src='{{item.suo}}' mode="aspectFill"></image>
        </view>
        <view class="bangumi-name">{{item.title}}</view>
      </view>
    </block>

  </view>     
  
</view>