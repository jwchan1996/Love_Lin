<!--index.wxml-->
<nav-bar text="{{navigationBarTitle}}"></nav-bar>
<view class="container" style="{{'padding-top:' + navigationBarHeight}}">
  <slide-swiper></slide-swiper>
  <view class="search">
    <image src='/images/search.png'></image><input placeholder="搜索一下下*花又不会坏……" placeholder-class="placeholder" />
  </view>

  <view class="week-bar">
    <view class="recommend" data-ddy="0" bindtap="getDayList">推荐</view>
    <view class="Monday" data-ddy="1" bindtap="getDayList">一</view>
    <view class="Tuesday" data-ddy="2" bindtap="getDayList">二</view>
    <view class="Wednesday" data-ddy="3" bindtap="getDayList">三</view>
    <view class="Thursday" data-ddy="4" bindtap="getDayList">四</view>
    <view class="Friday" data-ddy="5" bindtap="getDayList">五</view>
    <view class="Saturday" data-ddy="6" bindtap="getDayList">六</view>
    <view class="Sunday" data-ddy="7" bindtap="getDayList">日</view>
  </view>

  <view class="week-item-container">

    <block wx:for="{{currentDay}}" wx:key="item.av" wx:for-item="item">
      <view class="week-item">
        <view class="load-bg">
          <image class="bangumi-img" src='{{item.suo}}' mode="aspectFill"></image>
        </view>
        <view class="bangumi-name">{{item.title}}</view>
      </view>
    </block>

  </view>     
  
</view>