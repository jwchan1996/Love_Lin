page{
  background-color: #F8F8F8;
}
.container{
  height: auto;
  padding: 20px 1vw;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  flex-wrap: wrap;
}
.post-item{
  width: 22.5vw;
  height: auto;
  background-color: #ddd;
  margin: 1vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.load-bg{
  width: 100%;
  height: 22.5vw;
  /* background-image: url(https://ws1.sinaimg.cn/large/0065Zy9egy1g0extq9eyxj30e80e8q3t.jpg); */
  background-position: center;
  background-size: contain; 
}
.bangumi-img{
  width: 100%;
  height: 100%;
}
.bangumi-name{
  width: 100%;
  height: 56rpx;
  color: #515151;
  background-color: #F8F8F8;
  font-size: 24rpx;
  padding: 10rpx;
  word-break: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*没有数据*/
.no-data{
  width: 100vw;
  text-align: center;
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-data image{
  height: 100rpx;
  width: 100rpx;
}
.no-data text{
  padding-top: 20rpx;
  color: #999999;
  font-size: 32rpx;
}
